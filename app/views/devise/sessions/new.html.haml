- if facebook?
  %h2
    Welcome #{session["facebook_data"]["user_info"]["first_name"]}, you almost done
- else
  %h2 Sign in
= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  %p
    = f.label :email
    %br/
    = f.text_field :email
  %p
    = f.label :password
    %br/
    = f.password_field :password
  - if devise_mapping.rememberable? && !facebook?
    %p
      = f.check_box :remember_me
      = f.label :remember_me
  %p= f.submit facebook? ? "Merge Account" : "Sign in"
= render "devise/shared/links"